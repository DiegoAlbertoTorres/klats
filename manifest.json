{
  "manifest_version": 2,

  "name": "Klats",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "permissions": [
    "https://secure.flickr.com/",
    "https://connect.facebook.net/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
